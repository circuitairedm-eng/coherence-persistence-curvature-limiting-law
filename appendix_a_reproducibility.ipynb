# Imports
cells.append(nbf.v4.new_code_cell("""
import numpy as np
import matplotlib.pyplot as plt
from sklearn.neighbors import NearestNeighbors
from scipy.spatial.distance import cdist
"""))

# Positive control
cells.append(nbf.v4.new_markdown_cell("## Positive Control — Clean Gaussian Collapse"))
cells.append(nbf.v4.new_code_cell("""
def gaussian_collapse(T=40, n=200, d=2):
    centers = np.linspace(3, 0, T)
    Xs = []
    for t in range(T):
        X = np.random.randn(n, d) * 0.3 + np.array([centers[t], 0])
        Xs.append(X)
    return Xs

pos = gaussian_collapse()
"""))

# Negative control
cells.append(nbf.v4.new_markdown_cell("## Negative Control — High‑d Degenerate Heavy-Tail Noise"))
cells.append(nbf.v4.new_code_cell("""
def heavy_tail_noise(T=40, n=200, d=128):
    Xs=[]
    for t in range(T):
        X = np.random.standard_t(df=2, size=(n, d)) * (1 + 0.2*t)
        Xs.append(X)
    return Xs

neg = heavy_tail_noise()
"""))

# Persistence proxy
cells.append(nbf.v4.new_markdown_cell("## Persistence Proxy (H0 only)"))
cells.append(nbf.v4.new_code_cell("""
def persistence_proxy(X, k=10):
    nbrs = NearestNeighbors(n_neighbors=k).fit(X)
    dists, idx = nbrs.kneighbors(X)
    return np.mean(dists[:,1])
"""))

# Curvature proxy
cells.append(nbf.v4.new_markdown_cell("## Curvature Proxy (graph Laplacian trace)"))
cells.append(nbf.v4.new_code_cell("""
def curvature_proxy(X, k=10):
    nbrs = NearestNeighbors(n_neighbors=k).fit(X)
    dists, idx = nbrs.kneighbors(X)
    W = np.exp(-dists**2)
    L = np.diag(W.sum(axis=1)) - W
    return np.trace(L) / len(X)
"""))

# Discrete Ollivier curvature
cells.append(nbf.v4.new_markdown_cell("## Subsampled Discrete Ollivier Curvature"))
cells.append(nbf.v4.new_code_cell("""
def ollivier_curvature(X, m=40, k=10):
    idx = np.random.choice(len(X), m, replace=False)
    Y = X[idx]
    nbrs = NearestNeighbors(n_neighbors=k).fit(Y)
    d,_ = nbrs.kneighbors(Y)
    return np.mean(d[:,1])
"""))

# Run metrics
cells.append(nbf.v4.new_markdown_cell("## Compute all curves"))
cells.append(nbf.v4.new_code_cell("""
def compute_curves(seq):
    H0, C, Oll = [], [], []
    for X in seq:
        H0.append(persistence_proxy(X))
        C.append(curvature_proxy(X))
        Oll.append(ollivier_curvature(X))
    return np.array(H0), np.array(C), np.array(Oll)

H0_pos, C_pos, Oll_pos = compute_curves(pos)
H0_neg, C_neg, Oll_neg = compute_curves(neg)
"""))

